<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:gravity="center">

    <ImageView
      android:id="@+id/ivRocket"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="60dp"
      android:src="@drawable/ic_puzzle"
      android:contentDescription="TODO"/>


    <TextView
      android:id="@+id/tvSCTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@android:color/white"
      android:textSize="50sp"
      android:text="00:00.00"/>

    <edu.com.deepdive.ontrack.controller.ui.tools.DigitFlip
      xmlns:digit="http://schemas.android.com/apk/res-auto"
      android:id="@+id/tabDigit1"
      android:layout_width="wrap_content"
      android:layout_height="20dp"
      android:layout_gravity="center"
      digit:backgroundColor="#000000"
      digit:textColor="#ffffff"
      digit:textSize="60sp" />

    <edu.com.deepdive.ontrack.controller.HorizontalWheelView
      android:id="@+id/horizontalWheelView"
      app:snapToMarks="true"
      app:endLock="true"
      app:onlyPositiveValues="true"
      android:layout_width="200dp"
      android:layout_height="64dp"
      android:layout_marginTop="16dp"
      android:paddingBottom="32dp"
      app:activeColor="@color/white"
      app:normalColor="@color/colorDark"/>

  <Button
    android:id="@+id/btn_GiveUp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorBabyBlue"
    android:onClick="handleBtnAbortClick"
    android:shadowColor="@color/colorPrimary"
    android:shadowDx="5"
    android:shadowDy="5"
    android:text="Give up"
    android:textAllCaps="false"
    android:textColor="@android:color/background_light"
    android:textSize="18sp"/>
<!--  <include-->
<!--    layout="@layout/fragment_send"-->
<!--    android:layout_width="wrap_content"-->
<!--    android:layout_height="wrap_content"/>-->

</LinearLayout>